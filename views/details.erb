<h4>Post details:</h4>
<br />
<p>
    <%= @row['content'] %>
    <br />
    <br />
    Added at <%= @row['created_date']%>
</p>
<h4>Comments:</h4>

<% @comments.each do |comment| %>
    <p>
        <%= comment['content'] %>
        <br />
        <span style="font-size: 75%; color: #999">Added at <%= @row['created_date']%></span>
    </p>
    <hr />
<% end %>

<p>
<form action="/details/<%= @row['id'] %>" method="POST"role="form">
    <textarea name="content" class="form-control" placeholder="Type comment text here" rows="6"></textarea>
    <br />
    <button type="submit" class="btn btn-primary">Add comment</button>
</form>
</p>